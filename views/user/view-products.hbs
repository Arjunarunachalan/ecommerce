

    <section>
      <div class="container ">
        <div class="row">

          {{#each products}}

            <div class="col-md-3 mt-4 ">
              <div class="card" style="width: 15rem; height:20rem">
                <img src="/product-images/{{this._id}}.jpg"  alt=""" class="card-img-top h-50" alt="..." "/>
                <div class="card-body">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text">{{this.description}}</p>
                  <p class="card-price">Rs.{{this.price}}</p>
                
                  <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>

                </div>
              </div>
            </div>

          {{/each}}
        </div>
      </div>
    </section>

