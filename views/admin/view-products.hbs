<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product " class="btn btn-success w-25 ms-auto mb-4">Add Product</a>
        </div>
      
        <table class="table mt-4 pt-4" id="productsTable">
  <thead>
    <tr>
      <th scope="col">title</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th scope="col">image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" style="height: 50px; width:50px" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
   
  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>